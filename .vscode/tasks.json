{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "clang build",
      "type": "shell",
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-stdlib=libc++",
        // .c* build c or cpp
        "${fileDirname}/${fileBasenameNoExtension}.c*",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "--debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
    }
    }
  ]
}